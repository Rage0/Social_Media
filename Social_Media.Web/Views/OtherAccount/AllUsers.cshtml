@model UserAndAllUsersViewModel

@{
    Layout = "_ChatingRoomLayout";
    ViewBag.Title = "All users";
}

<div>
    <h4 class="text-center">All Users</h4>
    <div class="border-top mx-3">
        @if (Model.UsersFromContext.Count() > 0)
        {
            @foreach (User user in Model.UsersFromContext)
            {
                <div class="m-3 card" style="width: 400px">
                    <div class="card-body d-flex justify-content-between">
                        <div>
                            <h5>@user.UserName</h5>
                        </div>
                        <div>
                            <form asp-action="AddFollowToUser" asp-controller="OtherActionAccount">
                                <input hidden="hidden" name="UserName" value="@Model.User.UserName">
                                <input hidden="hidden" name="FriendName" value="@user.UserName">
                                <button class="btn btn-secondary p-1" type="submit">Follow</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        }
        else
        {
            <h5>Users is not exist</h5>
        }
    </div>
</div>
