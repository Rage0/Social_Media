<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="~/css/bundle.min.css"/>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">
</head>
<body>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
    <div class="content">
        <div class="item-block-horizontal">
            <a asp-action="MyProfile" asp-controller="Account" asp-route-userName="@Context.User.Identity.Name">My Profile</a>
            <a asp-action="MyPrivateChat" asp-controller="PrivateChat" asp-route-userName="@Context.User.Identity.Name">My Private Chat</a>
            <a asp-action="Chats" asp-controller="Chat">My chats</a>
            <a asp-action="Register" asp-controller="Account">Register</a>
            @if (Context.User.Identity.IsAuthenticated)
            {
                <a asp-action="Logout" asp-controller="Account">Log out</a>
            }
            else
            {
                <a asp-action="Login" asp-controller="Account">Log in</a>
            }

            @if (Context.User.Identity.Name != null)
            {
                  <div>
                      <h6>Name: @Context.User.Identity.Name</h6>
                      <a asp-action="EditUser" asp-controller="Account">Edit</a>
                      <form asp-action="RemovetUser" asp-controller="CrudAccount">
                          <input hidden="hidden" name="userName" value="@Context.User.Identity.Name">
                          <button type="submit">Remove</button>
                      </form>                                       
                  </div>
            }
        </div>
        <div class="content-include" style="overflow:auto">
            @RenderBody()
        </div>
    </div>
</body>
</html>
