@model IEnumerable<Post>

@{
    Layout = "_Layout";
    ViewBag.Title = "Posts";
}
@foreach (Post post in Model ?? new Post[]{ })
{
    <div class="card mx-auto" style="width: 75em; margin: 20px;">
        <div class="card-body">
            <div class="list-group list-group-flush">
                <div class="list-group-item"><h3 class="card-title text-center ">@post.Title</h3></div>
                <div class="list-group-item"><h4 class="card-text">@post.Discription</h4></div>
                <div class="text-end">
                    @if (post.Creater != null)
                    {
                        <h5>Creater: @post.Creater.UserName </h5>
                    }
                    <h6>CreateAt: @post.CreateAt</h6>
                    <h6>UpdateAt: @post.UpdateAt</h6>
            
                    <a asp-action="ChatingRoom" asp-controller="Chat" asp-route-chatId="@post.UsingChat.Id"><h6>Comments</h6></a>
                </div>
            </div>
        </div>
    </div>
}