@model Post

@{
    Layout = "_Layout";
}

<form method="post" asp-action="CreatePost" asp-controller="CrudPostWall">
    <tr>
        <td>
            <label asp-for="Title"></label>
            <input asp-for="Title" value="@Model.Title"/>
        </td>
    </tr>
    <tr>
        <td>
            <label asp-for="Discription"></label>
            <textarea asp-for="Discription" value="@Model.Discription"></textarea>
        </td>
    </tr>
    <input hidden="hidden" name="createrName" value="@Context.User.Identity.Name"/>
    <button type="submit">Create</button>
</form>